application {
     config {
         baseName petclinic
         applicationType gateway
         serverPort 8080
         packageName cl.nttdata.petclinic
         authenticationType jwt
         enableTranslation true
         nativeLanguage	es
         languages [es]
         jhiPrefix app
         buildTool gradle
         databaseType sql
         prodDatabaseType postgresql
         devDatabaseType postgresql
         clientFramework angularX
         serviceDiscoveryType no
         skipServer true
        //  useSass true
     }
     entities *
 }

